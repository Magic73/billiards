{
    "name": "billiards",
    "description": "Billiards",
    "version": "0.3.0",
    "author": "tailuge",
    "main": "dist/main.js",
    "license": "GPL-3.0",
    "scripts": {
        "test": "jest --verbose",
        "coverage": "jest --coverage --coverageReporters text",
        "dev": "webpack ",
        "prettify": "prettier --write --no-semi {src,test}/**/*.[jt]s",
        "serve": "webpack serve --port $(gp url 8080) --client-web-socket-url $(gp url 8080 | sed 's/http/ws/' | sed 's#$#/ws#')",
        "deps": "npx yarn-check --skip-unused",
        "websocket": "nodemon src/server/server.ts",
        "start": "ts-node src/server/server.ts"
    },
    "nodemonConfig": {
        "watch": [
            "src/server"
        ],
        "ext": "ts",
        "delay": "2",
        "execMap": {
            "ts": "ts-node"
        }
    },
    "dependencies": {
        "three": "^0.132.2"
    },
    "devDependencies": {
        "@types/chai": "^4.2.19",
        "@types/jest": "^27.0.1",
        "chai": "^4.3.4",
        "coveralls": "^3.1.1",
        "ini": "^2.0.0",
        "jest": "^27.2.0",
        "mocha": "^9.1.1",
        "node-notifier": "^10.0.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.4.0",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.2.1"
    }
}
