{
    "name": "billiards",
    "description": "Billiards",
    "version": "0.3.0",
    "author": "tailuge",
    "main": "dist/main.js",
    "license": "GPL-3.0",
    "engines": {
        "yarn": "1.x"
    },
    "scripts": {
        "test": "jest --verbose",
        "coverage": "jest --coverage --coverageReporters text",
        "dev": "webpack ",
        "prettify": "prettier --write --no-semi {src,test}/**/*.[jt]s",
        "serve": "webpack serve --client-web-socket-url $(gp url 8080 | sed 's/http/ws/' | sed 's#$#/ws#')",
        "deps": "npx yarn-check --skip-unused",
        "websocket": "nodemon src/server/server.ts",
        "build": "pwd; cd server; pwd; yarn build",
        "start": "pwd; cd server; pwd; yarn install; yarn start"
    },
    "nodemonConfig": {
        "watch": [
            "src/server"
        ],
        "ext": "ts",
        "delay": "2",
        "execMap": {
            "ts": "ts-node"
        }
    },
    "dependencies": {
        "three": "^0.137.5"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/jest": "^27.4.0",
        "chai": "^4.3.6",
        "ini": "^2.0.0",
        "jest": "^27.5.1",
        "mocha": "^9.2.0",
        "node-notifier": "^10.0.1",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    }
}
